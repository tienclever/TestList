<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvten"
        android:textColor="#2196F3"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="80dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#03A9F4"
        android:layout_toRightOf="@+id/tvten"
        android:id="@+id/tvNgaySinh"
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="40dp"
        android:textSize="12dp"
        android:textColor="#00BCD4"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/tvNgaySinh"
        android:id="@+id/tvSoDienThoai"
        android:text="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/tvSoDienThoai"
        android:layout_marginLeft="5sp"
        android:textSize="12dp"
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvDateOfbirth"
        android:layout_marginLeft="60dp"
        android:textSize="12dp"
        android:layout_toRightOf="@+id/tvten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNgaySinh" />
    <TextView
        android:id="@+id/tvPhonenumber"
        android:layout_marginLeft="40sp"
        android:textSize="12dp"
        android:layout_below="@+id/tvSoDienThoai"
        android:layout_toRightOf="@+id/tvNgaySinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="invisible"
        android:layout_marginLeft="20sp"
        android:textSize="12dp"
        android:id="@+id/tvSpecialized"
        android:layout_toRightOf="@+id/tvPhonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="invisible"
        android:layout_marginLeft="20sp"
        android:textSize="12dp"
        android:id="@+id/tvLevel"
        android:layout_toRightOf="@+id/tvSpecialized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>